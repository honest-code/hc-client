{
  "name": "hc-client",
  "version": "1.0.0",
  "description": "The HonestCode client is a tool which helps DevOps to integrate different systems with honestcode.io",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run test-acceptance",
    "lint": "eslint src tests-unit tests-acceptance main.js",
    "test-acceptance": "cucumber-js ./test/acceptance/features -r ./test/acceptance/step_definitions --tags ~@ignore --format json:acceptance_test_results",
    "coverage-acceptance": "istanbul cover --root src --include-all-sources --lcovonly --dir ./coverage/acceptance cucumber.js -- tests-acceptance --tags ~@ignore --format json",
    "coverange-to-coveralls": "cat ./coverage-mocha/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage-merge": "istanbul-combine coverage/**/coverage.json",
    "coverage": "npm run coverage-unit && npm run coverage-acceptance && npm run coverage-merge",
    "coveralls": "istanbul-coveralls",
    "codeclimate": "codeclimate-test-reporter < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/honest-code/hc-client.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/honest-code/hc-client/issues"
  },
  "homepage": "https://github.com/honest-code/hc-client#readme",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.3",
    "coveralls": "^2.11.12",
    "cucumber": "^1.2.1",
    "eslint": "^3.2.2",
    "eslint-plugin-extra-rules": "^0.6.1",
    "istanbul": "^0.4.4",
    "istanbul-combine": "^0.3.0",
    "istanbul-coveralls": "^1.0.3",
    "pre-commit": "^1.1.3"
  },
  "dependencies": {
    "request": "^2.74.0"
  },
  "pre-commit": [
    "lint"
  ]
}
